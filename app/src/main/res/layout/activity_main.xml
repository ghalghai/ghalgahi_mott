<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Toolbar
        android:id="@+id/toolbar"
        android:gravity="center"
        android:title="Ghalghai Mott"
        android:subtitle="Learn your language"
        android:background="@color/dark_grey"
        android:titleTextColor="@color/text"
        android:subtitleTextColor="@color/text"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">
        <androidx.appcompat.widget.SearchView
            android:id="@+id/search_view"
            android:layout_width="match_parent"
            android:background="@color/text"
            android:layout_height="?attr/actionBarSize"
            android:clickable="true"
            android:focusable="true"
            android:queryHint="Type a word"
            android:searchIcon="@drawable/ic_ingush_national_solar_symbol"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>